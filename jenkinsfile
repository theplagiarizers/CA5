pipeline {
    agent any
    
    stages {

        environment {
        registryCredential = 'dockerhub_id'
        dockerImage = ''
        }

        agent any
        tools {dockerTool  "mydocker" } 
        stages {
            stage('Initialize') {
                steps {
                    script {
                        def dockerHome = tool 'mydocker'
                        env.PATH = "${dockerHome}/bin:${env.PATH}"
                    }
                }
            }       
        stage('Run Services') {
            steps {
                // Deploy your application using Docker Compose
                sh 'docker-compose up -d'
            }
        }
    }
}