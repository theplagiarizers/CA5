pipeline {
    agent any


    tools {dockerTool  "docker" } 
    stages {
      
        stage("Initialize") {
            steps {
                script {
                    def dockerHome = tool 'docker'
                    env.PATH = "${dockerHome}/bin:${env.PATH}"
                }
            }
        }
        
        stage('Run Services') {
            steps {

            
                // Deploy your application using Docker Compose
                sh 'docker compose up -d'
                sh 'docker compose ps'
            }
        }
        stage('Stop Services'){
            steps {

                
                    // Deploy your application using Docker Compose
                    sh 'docker compose down'
                    sh 'docker compose ps'
                   
                }

        }
    }
}