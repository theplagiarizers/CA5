pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                // Checkout your source code from version control
                checkout scm
                
                // Build your Docker images
                sh 'docker-compose build'
            }
        }
        
        
        stage('Deploy') {
            steps {
                // Deploy your application using Docker Compose
                sh 'docker-compose up -d'
            }
        }
    }
}